{
	"name": "strato-db",
	"version": "0.0.0",
	"description": "NoSQL-hybrid with Event Sourcing based on sqlite",
	"license": "MIT",
	"repository": "Yaska/strato-db",
	"author": {
		"name": "Wout Mertens",
		"email": "Wout.Mertens@gmail.com",
		"url": ""
	},
	"engines": {
		"node": ">=6"
	},
	"scripts": {
		"build": "NODE_ENV=production babel -s true --ignore __tests__ -D -d dist/ src/",
		"test": "eslint src/**/*.js && NODE_ENV=test nyc ava",
		"test-watch": "NODE_ENV=test DEBUG_COLORS=yes ava --watch --verbose"
	},
	"main": "dist/index.js",
	"files": [
		"dist"
	],
	"keywords": [
		"sqlite",
		"nosql",
		"event sourcing",
		"esdb",
		"jsonmodel",
		"json",
		"database",
		"db"
	],
	"dependencies": {
		"bluebird": "^3.5.1",
		"dataloader": "^1.3.0",
		"debug": "^3.1.0",
		"jsurl": "github:wmertens/jsurl#jsurl2",
		"lodash": "^4.17.4",
		"sqlite": "^2.8.0",
		"uuid": "^3.1.0"
	},
	"devDependencies": {
		"ava": "^0.22.0",
		"babel-cli": "^6.26.0",
		"babel-eslint": "^8.0.0",
		"babel-plugin-lodash": "^3.2.11",
		"babel-plugin-syntax-dynamic-import": "^6.18.0",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-preset-env": "^1.6.0",
		"babel-register": "^6.26.0",
		"eslint": "^4.6.1",
		"eslint-config-xo": "^0.18.2",
		"eslint-plugin-ava": "^4.2.2",
		"eslint-plugin-babel": "^4.1.1",
		"eslint-plugin-import": "^2.7.0",
		"eslint-plugin-promise": "^3.5.0",
		"eslint-plugin-unicorn": "^2.1.2",
		"fs-extra": "^4.0.2",
		"makfy": "^1.2.0",
		"nyc": "^11.0.0"
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "es5",
		"bracketSpacing": false
	},
	"ava": {
		"files": [
			"src/**/{__tests__/*,*.test}.js"
		],
		"babel": "inherit",
		"concurrency": 5,
		"require": [
			"babel-register"
		]
	}
}
